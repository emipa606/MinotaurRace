<?xml version="1.0" encoding="utf-8"?>
<Patch>
  <Operation Class="PatchOperationAddModExtension">
    <!-- This xpath is not the same as a texture path, it's wierd like that. Most of the time you will only have to change the defName="xxx" part -->
    <xpath>/Defs/ThingDef[defName="VFEM_Apparel_PlateHelmetHeavy"]</xpath>
    <value>
      <li Class="RaceSpecificApparel.RaceSpecific">
        <races>
          <!-- You were missing this races tag -->
          <li>
            <race>MinotaurRace</race>
            <!-- This was spelled incorrectly. It has to correspond to your race def file -->
            <customPath>Things/Pawn/Minotaur/Apparel/VFE_HeavyPlateHelmet/HeavyPlateHelmet</customPath>
            <autoStyle>false</autoStyle>
          </li>
        </races>
      </li>
    </value>
  </Operation>
</Patch>