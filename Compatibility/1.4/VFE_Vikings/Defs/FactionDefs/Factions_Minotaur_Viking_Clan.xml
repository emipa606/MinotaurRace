          <VFEV_Minotaur_Raider>25</VFEV_Minotaur_Raider>
          <VFEV_Minotaur_Guardian>20</VFEV_Minotaur_Guardian>
          <VFEV_Minotaur_Ravager>10</VFEV_Minotaur_Ravager>
          <VFEV_Minotaur_Berserker>15</VFEV_Minotaur_Berserker>
